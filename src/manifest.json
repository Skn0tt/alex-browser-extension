{
  "name": "Alex",
  "description" : "Catch insensitive, inconsiderate writing",
  "version": "1.0",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "alex_options/dist/index.html",
    "default_icon": "alex_options/icon.png"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": [
        "alex_content_script/dist/index.js"
      ],
      "css": [
        "alex_content_script/index.css"
      ]
    }
  ]
}